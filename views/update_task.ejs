<!--include header-->
<%- include('include/_header') %>
<!--/include header-->

 <!--site-->
 <main class="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/"><i class="fa-solid fa-angles-left"></i>All Tasks</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Tasks</h2>
            <span class="text-light">Use the below form to update a task</span>
        </div>
        <!--Form handling-->
        <form method="POST" id="update_task">
            <div class="new_task">
                <div class="form-group">
                    <label for="title" class="text-light">Title</label>
                    <input type="hidden" name="id" value="">
                    <input type="text" name="title" required="required" value="" placeholder="Type your title here">
                </div>
                <div class="form-group">
                    <label for="description" class="text-light">Description</label>
                    <input type="text" name="description" value="" placeholder="Type your description here">
                </div>
                <div class="form-group">
                    <label for="startDateAndTime" class="text-light">Start Date & Time</label>
                    <input type="date" required="required" name="startDateAndTime"><input  required="required" type="time" name="startDateAndTime">
                </div>
                <div class="form-group">
                    <label for="endDateAndTime" class="text-light">End Date & Time</label>
                    <input type="date" required="required" name="endDateAndTime"><input  required="required" type="time" name="endDateAndTime">
                </div>
                <div class="form-group">
                    <label for="priority" class="text-light">Priority</label>
                    <input type="text" name="priority" value="" placeholder="Type your priority here">
                </div>
                <div class="form-group">
                    <label for="status" class="text-light">Status</label>
                    <input type="text" name="status" value="" placeholder="Type your status here">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Save</button>
                </div>
            </div>
        </form>
    </div>
</main>
<!--/site-->


<!--include footer-->
<%- include('include/_footer') %>
<!--/include footer-->